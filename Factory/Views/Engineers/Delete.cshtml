@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Delete Engineer</h2>
<hr />

<div class="container">
  <h4>Are you sure you want to delete this engineer?</h4>

  <div class="form-group">
    @Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model => model.FirstName)
  </div>
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <input type="submit" value="Delete" class="btn btn-default"/>
    </div>
  }

  <h3>@Html.ActionLink("Back to engineer details", "Details", new { id = Model.EngineerId })</h3>
</div>