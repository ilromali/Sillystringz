@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet.</h3>
}

@foreach (Engineer engineer in Model)
{
  <div class="card bg-light mb-3" style="max-width: 19rem;">
    <div class="card-body">
        <h4 class="card-title">@Html.ActionLink($"{engineer.LastName}, {engineer.FirstName}", "Details", new { id = engineer.EngineerId }) </h4>
        <p class="card-text">@Html.ActionLink("View", "Details", new { id = engineer.EngineerId}) || @Html.ActionLink("Edit", "Edit", new { id = engineer.EngineerId }) || @Html.ActionLink("Delete", "Delete", new { id = engineer.EngineerId})</p>
    </div>
  </div>
}

<h3>@Html.ActionLink("Add a new engineer", "Create")</h3>