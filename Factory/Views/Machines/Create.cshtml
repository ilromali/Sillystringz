@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a New Machine</h2>
<hr />

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.MachineName)
    @Html.TextBoxFor(model => model.MachineName)
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
  </div>

  <div class="form-group">
  <input type ="submit" value="Add new machine" class="btn btn-default" />
  </div>
}

<h3>@Html.ActionLink("Show all machines", "Index")</h3>