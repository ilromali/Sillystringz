@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<h1>License an Engineer</h1>
<hr />

<h4>New Engineer For:</h4>
<p>@Html.DisplayFor(model => model.MachineName)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  <div class="container">
    @Html.Label("Select Engineer:")
    @Html.DropDownList("EngineerId")
  </div>

  <input type="submit" value="Save" class="btn btn-default" />
}

<h3>@Html.ActionLink("Back to machine details", "Details", new { id = Model.MachineId })</h3>