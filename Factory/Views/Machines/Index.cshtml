@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet.</h3>
}

@foreach (Machine machine in Model)
{
  <div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-body">
      <h4 class="card-title">@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h4>
      <p class="card-text">@Html.ActionLink("View", "Details", new { id = machine.MachineId}) || @Html.ActionLink("Edit", "Edit", new { id = machine.MachineId }) || @Html.ActionLink("Delete", "Machines", new { id = machine.MachineId})</p>
    </div>
  </div>
}

<h3>@Html.ActionLink("Add a new machine", "Create")</h3>